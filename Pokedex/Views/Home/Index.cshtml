@model List<Pokemon>
@{
    ViewData["Title"] = "Home";
    var tipos = (List<Tipo>)ViewData["tipos"];
}

<section class="pt-5 pb-3 text-center container">
    <div class="row">
        <div class="col mx-auto">
            <h1>Pokédex</h1>
            <div class="group">
                <button id="btn-all" class="btn btn-md my-2 text-white bg-secondary btn-filter">Ver
                    Todos
                </button>
                @foreach (var tipo in tipos)
                {
                    <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                        style="background-color:#aab">Aço
                    </button>
                }
            </div>
        </div>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">

            @foreach (var pokemon in Model)
            {
                <!-- Card Pokemon - Inicio -->
                <div class="col">
                    <div class="card shadow-sm cursor-pointer @string.Join('', pokemon.Tipo)">
                        <img src="@pokemon.imagem" class="card-img-top" width="100%" height="300" alt="@pokemon.Nome" />
                        <div class="card-body">
                            <p class="card-text mb-0">Nº @pokemon.Numero.ToString</p>
                            <h3 class="card-title">Bulbasaur</h3>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="#" class="btn my-2 text-white" style="background-color:#7c5">Planta</a>
                                    <a href="#" class="btn my-2 text-white" style="background-color:#a59">Venenoso</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Card Pokemon - Fim -->
            }

            <div id="zeroPokemon" class="col-lg-12 text-center" hidden>
                <h1 class="my-3 text-danger">Nenhum Pokemon Encontrado</h1>
            </div>
        </div>


    </div>
</div>
